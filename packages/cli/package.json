{
  "name": "@sentio/cli",
  "version": "2.0.0-development",
  "license": "Apache-2.0",
  "type": "module",
  "exports": {
    ".": "./lib/index.js"
  },
  "bin": {
    "sentio": "./lib/index.js"
  },
  "files": [
    "{lib,src,templates}",
    "!{lib,src}/**/*.test.{js,ts}"
  ],
  "scripts": {
    "build": "pnpm tsc --noEmit && pnpm bundle",
    "postbuild": "pnpm install",
    "bundle": "esbuild --platform=node --format=esm --bundle src/index.ts --outfile=lib/index.js --sourcemap --inject:src/cjs-shim.ts --external:@sentio/sdk",
    "cli": "tsx src/index.ts",
    "compile": "tsc",
    "test": "glob -c 'tsx --test' '**/*.test.ts'"
  },
  "types": "module",
  "dependencies": {
    "@aptos-labs/ts-sdk": "~1.33.0",
    "@mysten/sui": "~1.20.0",
    "@sentio/chain": "~3.0.7",
    "@sentio/graph-cli": "^0.80.0-patch.1",
    "@types/node": "^22.8.6",
    "chalk": "^5.3.0",
    "command-line-args": "^5.2.1",
    "command-line-usage": "^7.0.1",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "form-data": "^4.0.0",
    "fs-extra": "^11.2.0",
    "jszip": "^3.10.1",
    "latest-version": "^9.0.0",
    "node-fetch": "^3.3.2",
    "open": "^10.0.3",
    "package-manager-manager": "^0.2.0",
    "solc": "^0.8.25",
    "starknet": "^6.11.0",
    "tsup": "npm:@sentio/tsup@^8.3.5-rc.1",
    "tsx": "^4.15.2",
    "yaml": "^2.3.4"
  },
  "peerDependencies": {
    "@sentio/sdk": "workspace:^"
  },
  "devDependencies": {
    "@types/command-line-args": "^5.2.3",
    "@types/command-line-usage": "^5.0.4",
    "@types/express": "^5.0.0",
    "@types/fs-extra": "^11.0.4"
  },
  "engines": {
    "node": ">=20"
  }
}
